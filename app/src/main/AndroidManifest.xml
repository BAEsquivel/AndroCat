<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mustafaozhan.github.com.androcat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="mustafaozhan.github.com.androcat.application.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mustafaozhan.github.com.androcat.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mustafaozhan.github.com.androcat.main.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="github.com"
                    android:path="/"
                    android:scheme="*" />
                <data
                    android:host="github.com"
                    android:path="/pulls"
                    android:scheme="s" />
                <data
                    android:host="github.com"
                    android:path="/issues"
                    android:scheme="https" />
            </intent-filter>

        </activity>
        <activity
            android:name="Trashcan.txt"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name="Trashcan.txt"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            tools:replace="android:theme" />

        <receiver android:name=".notification.NotificationReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="Trashcan.txt"
            android:value="@string/admob_app_id" />

        <meta-data
            android:name="Trashcan.txt"
            android:value="fbacbda6e429dfadcba3d54f47c1588d524b5b24" />

        <uses-library
            android:name="Trashcan.txt"
            android:required="false" />

    </application>

</manifest>
